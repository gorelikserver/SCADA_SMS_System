@page
@model SCADASMSSystem.Web.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users Management";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-users me-2"></i>Users Management
        </h1>
        <a href="/Users/Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Add New User
        </a>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search and Filter Card -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-search me-2"></i>Search and Filter Users
            </h6>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">Search Users</label>
                    <input asp-for="SearchTerm" class="form-control" placeholder="Name, email, or phone..." />
                </div>
                <div class="col-md-3">
                    <label for="smsEnabledFilter" class="form-label">SMS Status</label>
                    <select asp-for="SmsEnabledFilter" class="form-select">
                        <option value="">All Users</option>
                        <option value="true">SMS Enabled</option>
                        <option value="false">SMS Disabled</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>Filter
                    </button>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <a href="/Users/Create" class="btn btn-success me-2">
                        <i class="fas fa-plus me-2"></i>Add User
                    </a>
                    <a href="/Users" class="btn btn-outline-secondary">
                        <i class="fas fa-refresh me-2"></i>Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Data Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-table me-2"></i>Users (@Model.Users.Count())
            </h6>
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                   data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                     aria-labelledby="dropdownMenuLink">
                    <div class="dropdown-header">Export Options:</div>
                    <a class="dropdown-item" href="#" onclick="exportTableToCSV()">
                        <i class="fas fa-file-csv me-2"></i>Export to CSV
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>SMS</th>
                            <th>Holiday Work</th>
                            <th>Groups</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm me-3">
                                            <i class="fas fa-user-circle fa-2x text-gray-500"></i>
                                        </div>
                                        <div>
                                            <div class="font-weight-bold">@user.UserName</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(user.Email))
                                    {
                                        <a href="mailto:@user.Email" class="text-decoration-none">
                                            @user.Email
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">
                                            <i class="fas fa-envelope-open me-1"></i>No email
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a href="tel:@user.PhoneNumber" class="text-decoration-none">
                                        @user.PhoneNumber
                                    </a>
                                </td>
                                <td>
                                    <span class="badge @(user.SmsEnabled ? "bg-success text-white" : "bg-secondary text-white")">
                                        <i class="fas @(user.SmsEnabled ? "fa-bell" : "fa-bell-slash")"></i>
                                        @(user.SmsEnabled ? "Enabled" : "Disabled")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(user.SpecialDaysEnabled ? "bg-warning text-dark" : "bg-secondary text-white")">
                                        <i class="fas @(user.SpecialDaysEnabled ? "fa-calendar-check" : "fa-calendar-times")"></i>
                                        @(user.SpecialDaysEnabled ? "Available" : "Not Available")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-info text-white">
                                        @user.GroupMembers.Count() groups
                                    </span>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" 
                                                data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-cog"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" href="/Users/Edit/@user.UserId">
                                                    <i class="fas fa-edit me-2"></i>Edit User
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="/Audit?userId=@user.UserId">
                                                    <i class="fas fa-history me-2"></i>SMS History
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item text-danger" href="#" 
                                                   onclick="confirmDelete(@user.UserId, '@user.UserName')">
                                                    <i class="fas fa-trash me-2"></i>Delete User
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Users.Any())
                {
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <i class="fas fa-users fa-3x text-gray-300"></i>
                        </div>
                        <h5 class="text-gray-500">No Users Found</h5>
                        <p class="text-gray-400">
                            @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.SmsEnabledFilter.HasValue)
                            {
                                <text>No users match your current filters. Try adjusting your search criteria.</text>
                            }
                            else
                            {
                                <text>Get started by adding your first user to the system.</text>
                            }
                        </p>
                        <a href="/Users/Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Add First User
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Export to CSV functionality
        function exportTableToCSV() {
            const table = document.getElementById('usersTable');
            const rows = Array.from(table.querySelectorAll('tr'));
            
            const csvContent = rows.map(row => {
                const cells = Array.from(row.querySelectorAll('th, td'));
                return cells.map(cell => {
                    // Clean up cell content for CSV
                    const text = cell.textContent.trim().replace(/\s+/g, ' ');
                    return `"${text.replace(/"/g, '""')}"`;
                }).join(',');
            }).join('\n');
            
            const blob = new Blob([csvContent], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `scada-users-${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
        }

        // Confirm delete functionality
        function confirmDelete(userId, userName) {
            if (confirm(`Are you sure you want to delete user "${userName}"?\n\nThis action cannot be undone and will remove the user from all groups.`)) {
                // Create and submit delete form
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/Users/Delete/${userId}`;
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]');
                if (token) {
                    form.appendChild(token.cloneNode());
                }
                
                document.body.appendChild(form);
                form.submit();
            }
        }

        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}