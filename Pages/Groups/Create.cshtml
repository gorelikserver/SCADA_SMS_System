@page
@model SCADASMSSystem.Web.Pages.Groups.CreateModel
@{
    ViewData["Title"] = "Create New Group";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-plus me-2"></i>Create New Group
        </h1>
        <a href="/Groups" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to Groups
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Group Creation Form -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-layer-group me-2"></i>Group Information
                    </h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-4">
                            <label asp-for="GroupInput.GroupName" class="form-label"></label>
                            <input asp-for="GroupInput.GroupName" class="form-control" placeholder="Enter group name (e.g., Critical Alarms, Maintenance Team)">
                            <span asp-validation-for="GroupInput.GroupName" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Choose a descriptive name that reflects the group's purpose or role
                            </div>
                        </div>

                        <hr>

                        <h6 class="font-weight-bold text-primary mb-3">
                            <i class="fas fa-users me-2"></i>Initial Members (Optional)
                        </h6>
                        
                        @if (Model.AvailableUsers.Any())
                        {
                            <div class="mb-3">
                                <input type="text" id="userSearch" class="form-control" placeholder="?? Search users by name, email, or phone...">
                            </div>
                        }
                        
                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label">Available Users (<span id="visibleUsersCount">@Model.AvailableUsers.Count()</span>)</label>
                                <div class="border rounded p-3" style="height: 400px; overflow-y: auto;" id="availableUsers">
                                    @foreach (var user in Model.AvailableUsers)
                                    {
                                        <div class="form-check mb-2 user-item" 
                                             data-user-name="@user.UserName.ToLower()" 
                                             data-user-email="@(user.Email?.ToLower() ?? string.Empty)" 
                                             data-user-phone="@user.PhoneNumber">
                                            <input class="form-check-input" type="checkbox" 
                                                   name="GroupInput.InitialMemberIds" 
                                                   value="@user.UserId" 
                                                   id="user_@user.UserId">
                                            <label class="form-check-label" for="user_@user.UserId">
                                                <div>
                                                    <div class="font-weight-bold">@user.UserName</div>
                                                </div>
                                                <small class="text-muted d-block">
                                                    @(user.Email ?? "No email") · @user.PhoneNumber
                                                    @if (user.SmsEnabled)
                                                    {
                                                        <span class="badge badge-success">SMS</span>
                                                    }
                                                    @if (user.SpecialDaysEnabled)
                                                    {
                                                        <span class="badge badge-warning">Holidays</span>
                                                    }
                                                </small>
                                            </label>
                                        </div>
                                    }
                                    
                                    @if (!Model.AvailableUsers.Any())
                                    {
                                        <div class="text-center text-muted py-3" id="noUsersMessage">
                                            <i class="fas fa-users fa-2x mb-2"></i>
                                            <p>No users available.<br>Create users first before adding them to groups.</p>
                                            <a href="/Users/Create" class="btn btn-sm btn-primary">Create Users</a>
                                        </div>
                                    }
                                    
                                    <div id="noSearchResults" class="text-center text-muted py-3" style="display: none;">
                                        <i class="fas fa-search fa-2x mb-2"></i>
                                        <p>No users match your search.<br>Try a different search term.</p>
                                    </div>
                                </div>
                                
                                @if (Model.AvailableUsers.Any())
                                {
                                    <div class="mt-2">
                                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectAll()">
                                            <i class="fas fa-check-square"></i> Select All
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="selectNone()">
                                            <i class="fas fa-square"></i> Select None
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-success" onclick="selectSmsEnabled()">
                                            <i class="fas fa-mobile-alt"></i> SMS Users Only
                                        </button>
                                    </div>
                                }
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label">Selected Members <span id="selectedCount" class="badge badge-primary">0</span></label>
                                <div class="border rounded p-3" style="height: 400px; overflow-y: auto;" id="selectedMembers">
                                    <div class="text-center text-muted py-5" id="noSelectionMessage">
                                        <i class="fas fa-user-plus fa-2x mb-2"></i>
                                        <p>No members selected yet.<br>Select users from the left to add them to this group.</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="mt-4">

                        <div class="d-flex justify-content-between">
                            <a href="/Groups" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Create Group
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Help & Guidelines -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-info-circle me-2"></i>Group Creation Guidelines
                    </h6>
                </div>
                <div class="card-body">
                    <h6 class="font-weight-bold">Common Group Types:</h6>
                    <ul class="small">
                        <li><strong>Critical Alarms:</strong> For urgent system failures</li>
                        <li><strong>Maintenance Team:</strong> For scheduled maintenance alerts</li>
                        <li><strong>Emergency Response:</strong> For emergency situations</li>
                        <li><strong>Management:</strong> For administrative notifications</li>
                        <li><strong>Night Shift:</strong> For after-hours coverage</li>
                        <li><strong>Technical Support:</strong> For technical issues</li>
                    </ul>

                    <h6 class="font-weight-bold mt-3">Best Practices:</h6>
                    <ul class="small">
                        <li>Use descriptive, clear names</li>
                        <li>Keep groups focused on specific purposes</li>
                        <li>Consider user availability during holidays</li>
                        <li>Review and update memberships regularly</li>
                        <li>Test SMS delivery after creating groups</li>
                    </ul>

                    <h6 class="font-weight-bold mt-3">Member Selection:</h6>
                    <p class="small">
                        You can add members now or skip this step and add them later. Members can belong to multiple groups, 
                        and you can easily modify group membership after creation.
                    </p>
                </div>
            </div>

            <!-- User Statistics -->
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-chart-bar me-2"></i>User Statistics
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="small font-weight-bold">Total Users:</span>
                        <span class="badge badge-primary">@Model.AvailableUsers.Count()</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="small font-weight-bold">SMS Enabled:</span>
                        <span class="badge badge-success">@Model.AvailableUsers.Count(u => u.SmsEnabled)</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="small font-weight-bold">Holiday Workers:</span>
                        <span class="badge badge-warning">@Model.AvailableUsers.Count(u => u.SpecialDaysEnabled)</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="small font-weight-bold">Available for Groups:</span>
                        <span class="badge badge-info">@Model.AvailableUsers.Count()</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Member selection functionality
        function updateSelectedMembers() {
            const checkboxes = document.querySelectorAll('input[name="GroupInput.InitialMemberIds"]:checked');
            const selectedMembersDiv = document.getElementById('selectedMembers');
            const selectedCount = document.getElementById('selectedCount');
            const noSelectionMessage = document.getElementById('noSelectionMessage');
            
            selectedCount.textContent = checkboxes.length;
            
            if (checkboxes.length === 0) {
                selectedMembersDiv.innerHTML = `
                    <div class="text-center text-muted py-5" id="noSelectionMessage">
                        <i class="fas fa-user-plus fa-2x mb-2"></i>
                        <p>No members selected yet.<br>Select users from the left to add them to this group.</p>
                    </div>`;
            } else {
                let html = '';
                checkboxes.forEach(checkbox => {
                    const label = document.querySelector(`label[for="${checkbox.id}"]`);
                    const userName = label.querySelector('strong').textContent;
                    const userInfo = label.querySelector('small').textContent;
                    
                    html += `
                        <div class="border-bottom pb-2 mb-2">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <strong>${userName}</strong>
                                    <small class="text-muted d-block">${userInfo}</small>
                                </div>
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="unselectUser('${checkbox.id}')">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>`;
                });
                selectedMembersDiv.innerHTML = html;
            }
        }

        // Add event listeners to checkboxes
        document.addEventListener('DOMContentLoaded', function() {
            const checkboxes = document.querySelectorAll('input[name="GroupInput.InitialMemberIds"]');
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateSelectedMembers);
            });
        });

        // Selection helper functions
        function selectAll() {
            const checkboxes = document.querySelectorAll('input[name="GroupInput.InitialMemberIds"]');
            checkboxes.forEach(checkbox => checkbox.checked = true);
            updateSelectedMembers();
        }

        function selectNone() {
            const checkboxes = document.querySelectorAll('input[name="GroupInput.InitialMemberIds"]');
            checkboxes.forEach(checkbox => checkbox.checked = false);
            updateSelectedMembers();
        }

        function selectSmsEnabled() {
            selectNone();
            const checkboxes = document.querySelectorAll('input[name="GroupInput.InitialMemberIds"]');
            checkboxes.forEach(checkbox => {
                const label = document.querySelector(`label[for="${checkbox.id}"]`);
                if (label.querySelector('.badge-success')) {
                    checkbox.checked = true;
                }
            });
            updateSelectedMembers();
        }

        function unselectUser(checkboxId) {
            document.getElementById(checkboxId).checked = false;
            updateSelectedMembers();
        }

        // Form validation feedback
        document.querySelector('form').addEventListener('submit', function(e) {
            const submitBtn = e.target.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Creating Group...';
            submitBtn.disabled = true;
        });

        // User search functionality
        document.getElementById('userSearch').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const users = document.querySelectorAll('#availableUsers .user-item');
            let visibleCount = 0;
            
            users.forEach(user => {
                const userName = user.getAttribute('data-user-name');
                const userEmail = user.getAttribute('data-user-email');
                const userPhone = user.getAttribute('data-user-phone');
                
                if (userName.includes(searchTerm) || userEmail.includes(searchTerm) || userPhone.includes(searchTerm)) {
                    user.style.display = 'flex';
                    visibleCount++;
                } else {
                    user.style.display = 'none';
                }
            });
            
            document.getElementById('visibleUsersCount').textContent = visibleCount;
            document.getElementById('noSearchResults').style.display = visibleCount === 0 ? 'block' : 'none';
        });
    </script>
}