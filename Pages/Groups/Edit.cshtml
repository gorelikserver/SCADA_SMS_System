@page "{id:int}"
@model SCADASMSSystem.Web.Pages.Groups.EditModel
@{
    ViewData["Title"] = "Edit Group";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-edit me-2"></i>Edit Group
        </h1>
        <a href="/Groups" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to Groups
        </a>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-4">
            <!-- Group Edit Form -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-layer-group me-2"></i>Group Information
                    </h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="GroupInput.GroupId" />
                        <input type="hidden" asp-for="GroupInput.OriginalGroupName" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="GroupInput.GroupName" class="form-label"></label>
                            <input asp-for="GroupInput.GroupName" class="form-control" placeholder="Enter group name">
                            <span asp-validation-for="GroupInput.GroupName" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Update Group
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Group Statistics -->
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-info">
                        <i class="fas fa-chart-bar me-2"></i>Group Statistics
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="small font-weight-bold">Group ID:</span>
                        <span class="badge bg-secondary text-white">@Model.GroupInput.GroupId</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="small font-weight-bold">Total Members:</span>
                        <span class="badge bg-primary text-white">@Model.CurrentMembers.Count()</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="small font-weight-bold">SMS Enabled:</span>
                        <span class="badge bg-success text-white">@Model.CurrentMembers.Count(u => u.SmsEnabled)</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="small font-weight-bold">Holiday Workers:</span>
                        <span class="badge bg-warning text-dark">@Model.CurrentMembers.Count(u => u.SpecialDaysEnabled)</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="small font-weight-bold">Created:</span>
                        <span class="badge bg-info text-white">
                            @(Model.GroupCreatedAt?.ToString("MMM dd, yyyy") ?? "Unknown")
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <!-- Current Members -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-success">
                        <i class="fas fa-users me-2"></i>Current Members (<span id="currentMembersCount">@Model.CurrentMembers.Count()</span>)
                    </h6>
                    @if (Model.CurrentMembers.Any())
                    {
                        <input type="text" id="currentMembersSearch" class="form-control form-control-sm" style="max-width: 300px;" placeholder="?? Search current members...">
                    }
                </div>
                <div class="card-body">
                    @if (Model.CurrentMembers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="currentMembersTable">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Phone</th>
                                        <th>SMS</th>
                                        <th>Holiday Work</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in Model.CurrentMembers)
                                    {
                                        <tr data-user-name="@member.UserName.ToLower()" data-user-email="@(member.Email?.ToLower() ?? string.Empty)" data-user-phone="@member.PhoneNumber">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-circle fa-2x text-gray-500 me-3"></i>
                                                    <div>
                                                        <div class="font-weight-bold">@member.UserName</div>
                                                        <small class="text-muted">@(member.Email ?? "No email")</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="tel:@member.PhoneNumber" class="text-decoration-none">
                                                    @member.PhoneNumber
                                                </a>
                                            </td>
                                            <td>
                                                <span class="badge @(member.SmsEnabled ? "bg-success text-white" : "bg-secondary text-white")">
                                                    <i class="fas @(member.SmsEnabled ? "fa-bell" : "fa-bell-slash")"></i>
                                                    @(member.SmsEnabled ? "Enabled" : "Disabled")
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @(member.SpecialDaysEnabled ? "bg-warning text-dark" : "bg-secondary text-white")">
                                                    <i class="fas @(member.SpecialDaysEnabled ? "fa-calendar-check" : "fa-calendar-times")"></i>
                                                    @(member.SpecialDaysEnabled ? "Available" : "Not Available")
                                                </span>
                                            </td>
                                            <td>
                                                <form method="post" asp-page-handler="RemoveMember" 
                                                      asp-route-groupId="@Model.GroupInput.GroupId" 
                                                      asp-route-userId="@member.UserId" style="display: inline;">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                            onclick="return confirm('Remove @member.UserName from this group?')">
                                                        <i class="fas fa-user-minus"></i> Remove
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-gray-300 mb-3"></i>
                            <h5 class="text-gray-500">No Members in Group</h5>
                            <p class="text-gray-400">Add users to this group to start sending SMS notifications.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Available Users -->
            <div class="card shadow">
                <div class="card-header py-3">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h6 class="m-0 font-weight-bold text-primary">
                                <i class="fas fa-user-plus me-2"></i>Add Members (<span id="availableUsersCount">@Model.AvailableUsers.Count()</span> available)
                            </h6>
                        </div>
                        @if (Model.AvailableUsers.Any())
                        {
                            <div class="col-md-6">
                                <input type="text" id="availableUsersSearch" class="form-control form-control-sm" placeholder="?? Search available users...">
                            </div>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.AvailableUsers.Any())
                    {
                        <div class="row" id="availableUsersContainer">
                            @foreach (var user in Model.AvailableUsers)
                            {
                                <div class="col-md-6 col-lg-4 mb-3 user-card" 
                                     data-user-name="@user.UserName.ToLower()" 
                                     data-user-email="@(user.Email?.ToLower() ?? string.Empty)" 
                                     data-user-phone="@user.PhoneNumber">
                                    <div class="card border">
                                        <div class="card-body p-3">
                                            <div class="d-flex align-items-center mb-2">
                                                <i class="fas fa-user-circle fa-2x text-primary me-3"></i>
                                                <div>
                                                    <div class="font-weight-bold">@user.UserName</div>
                                                </div>
                                            </div>
                                            <div class="mb-2">
                                                <small class="text-muted d-block">@(user.Email ?? "No email")</small>
                                                <small class="text-muted d-block">@user.PhoneNumber</small>
                                            </div>
                                            <div class="mb-3">
                                                @if (user.SmsEnabled)
                                                {
                                                    <span class="badge bg-success text-white">SMS</span>
                                                }
                                                @if (user.SpecialDaysEnabled)
                                                {
                                                    <span class="badge bg-warning text-dark">Holidays</span>
                                                }
                                            </div>
                                            <form method="post" asp-page-handler="AddMember" 
                                                  asp-route-groupId="@Model.GroupInput.GroupId" 
                                                  asp-route-userId="@user.UserId">
                                                <button type="submit" class="btn btn-sm btn-primary btn-block w-100">
                                                    <i class="fas fa-plus me-1"></i>Add to Group
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div id="noResultsMessage" class="text-center py-4" style="display: none;">
                            <i class="fas fa-search fa-3x text-gray-300 mb-3"></i>
                            <h5 class="text-gray-500">No Users Found</h5>
                            <p class="text-gray-400">No users match your search criteria. Try a different search term.</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-user-check fa-3x text-gray-300 mb-3"></i>
                            <h5 class="text-gray-500">No Available Users</h5>
                            <p class="text-gray-400">
                                All available users are already members of this group.
                                @if (!Model.CurrentMembers.Any())
                                {
                                    <br /><text>Create new users to add them to this group.</text>
                                }
                            </p>
                            <div class="mt-3">
                                <a href="/Users/Create" class="btn btn-primary">
                                    <i class="fas fa-user-plus me-2"></i>Create New User
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Real-time search for available users
        const availableUsersSearch = document.getElementById('availableUsersSearch');
        if (availableUsersSearch) {
            availableUsersSearch.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const userCards = document.querySelectorAll('.user-card');
                const noResultsMessage = document.getElementById('noResultsMessage');
                let visibleCount = 0;

                userCards.forEach(card => {
                    const userName = card.getAttribute('data-user-name');
                    const userEmail = card.getAttribute('data-user-email');
                    const userPhone = card.getAttribute('data-user-phone');
                    
                    const matches = userName.includes(searchTerm) || 
                                  userEmail.includes(searchTerm) || 
                                  userPhone.includes(searchTerm);
                    
                    if (matches) {
                        card.style.display = '';
                        visibleCount++;
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Update count and show/hide no results message
                document.getElementById('availableUsersCount').textContent = visibleCount;
                noResultsMessage.style.display = visibleCount === 0 ? '' : 'none';
            });
        }

        // Real-time search for current members
        const currentMembersSearch = document.getElementById('currentMembersSearch');
        if (currentMembersSearch) {
            currentMembersSearch.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('#currentMembersTable tbody tr');
                let visibleCount = 0;

                rows.forEach(row => {
                    const userName = row.getAttribute('data-user-name');
                    const userEmail = row.getAttribute('data-user-email');
                    const userPhone = row.getAttribute('data-user-phone');
                    
                    const matches = userName.includes(searchTerm) || 
                                  userEmail.includes(searchTerm) || 
                                  userPhone.includes(searchTerm);
                    
                    if (matches) {
                        row.style.display = '';
                        visibleCount++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                // Update count
                document.getElementById('currentMembersCount').textContent = visibleCount;
            });
        }

        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 3000);

        // Form validation feedback
        document.querySelector('form').addEventListener('submit', function(e) {
            const submitBtn = e.target.querySelector('button[type="submit"]');
            if (submitBtn && submitBtn.textContent.includes('Update')) {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Updating Group...';
                submitBtn.disabled = true;
            }
        });

        // Add loading state to add member buttons
        document.querySelectorAll('form[asp-page-handler="AddMember"] button').forEach(button => {
            button.addEventListener('click', function() {
                button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Adding...';
                button.disabled = true;
            });
        });

        // Add confirmation for remove actions
        document.querySelectorAll('form[asp-page-handler="RemoveMember"] button').forEach(button => {
            button.addEventListener('click', function(e) {
                const form = this.closest('form');
                const userIdInput = form.querySelector('input[name="userId"]');
                if (!confirm(`Remove this user from the group?`)) {
                    e.preventDefault();
                }
            });
        });
    </script>
}